<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ScreenBackgroundColorAndText">
        <item name="android:background">@color/background_color</item>
        <item name="android:textColor">@color/namescreen_color</item>
    </style>

    <style name="BotNav" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@drawable/bottom_navigation_background</item>
        <item name="itemIconTint">@color/bottom_nav_icon_tint</item>
        <item name="itemTextColor">@color/bottom_nav_text_color</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="itemTextAppearanceActive">@style/BottomNavTextActive</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavTextInactive</item>
        <item name="itemHorizontalTranslationEnabled">false</item>
    </style>

    <style name="BottomNavTextActive" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/bottom_nav_text_color</item>
    </style>

    <style name="BottomNavTextInactive" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/bottom_nav_divider</item>
    </style>

</resources>
