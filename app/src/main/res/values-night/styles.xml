<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ScreenBackgroundColorAndText">
        <item name="android:background">@color/background_color</item>
        <item name="android:textColor">@color/namescreen_color</item>
    </style>

    <style name="BotNav" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@drawable/bottom_navigation_background</item>
        <item name="itemIconTint">@color/bottom_nav_icon_tint</item>
        <item name="itemTextColor">@color/bottom_nav_text_color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ThemeOverlay.BottomNav.NoBold" parent="">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="HeaderStyle" parent="">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="filter_btn">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="search_bar">
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:backgroundTint">@color/yp_gray</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="error_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="team_style">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
