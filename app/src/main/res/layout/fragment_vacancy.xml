<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/vac_header"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back_btn"
            style="@style/vac_btns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/pad_4"
            android:src="@drawable/back_icon" />

        <TextView
            style="@style/HeaderStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/pad_4"
            android:gravity="center"
            android:text="@string/vacancy_layout" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/share_btn"
            style="@style/vac_btns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/margin_half_8"
            android:src="@drawable/share_icon" />

        <ImageView
            android:id="@+id/favorites_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/margin_half_8"
            android:src="@drawable/favorite_icon" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/full_vac_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
         app:layout_constraintTop_toBottomOf="@+id/vac_header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_def_16"
            android:layout_marginEnd="@dimen/margin_def_16"
            android:layout_marginBottom="@dimen/margin_def_16"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/vac_name_sal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/vac_name"
                    style="@style/vac_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/margin_half_8"
                    android:fontFamily="@font/ys_display_bold"
                    android:text="Ardroid-разработчик"
                    android:textSize="32sp" />

                <TextView
                    android:id="@+id/vac_salary"
                    style="@style/vac_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/margin_half_8"
                    android:fontFamily="@font/ys_display_medium"
                    android:text="от 100 000 ₽"
                    android:textSize="@dimen/vac_info_head" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/vac_employer_region"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_def_16"
                android:background="@drawable/vac_info_bg"
                android:padding="1dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/vac_img"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/margin_def_16"
                    android:layout_marginTop="@dimen/margin_def_16"
                    android:layout_marginEnd="@dimen/margin_half_8"
                    android:layout_marginBottom="@dimen/margin_def_16"
                    android:background="@drawable/vac_icon_border"
                    android:scaleType="centerInside"
                    android:clipToOutline="true"
                    android:src="@drawable/placeholder" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/vac_employer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/margin_def_16"
                        android:layout_marginEnd="@dimen/margin_def_16"
                        android:fontFamily="@font/ys_display_medium"
                        android:text="Еда"
                        android:textColor="@color/yp_black"
                        android:textSize="@dimen/vac_info_head" />

                    <TextView
                        android:id="@+id/vac_region"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="@dimen/margin_def_16"
                        android:layout_marginBottom="19dp"
                        android:fontFamily="@font/ys_display_regular"
                        android:text="Москва"
                        android:textColor="@color/yp_black"
                        android:textSize="@dimen/vac_info_text" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/experience_title"
                style="@style/vac_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/ys_display_medium"
                android:text="@string/experience"
                android:textSize="@dimen/vac_info_text" />

            <TextView
                android:id="@+id/experience_info"
                style="@style/vac_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pad_4"
                android:fontFamily="@font/ys_display_regular"
                android:text="От 1 года до 3 лет"
                android:textSize="@dimen/vac_info_text" />

            <TextView
                android:id="@+id/schedule_info"
                style="@style/vac_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_half_8"
                android:fontFamily="@font/ys_display_regular"
                android:text="Полная занятость, Удаленная работа"
                android:textSize="@dimen/vac_info_text" />

            <TextView
                android:id="@+id/description_title"
                style="@style/vac_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/ys_display_medium"
                android:text="@string/vac_description"
                android:textSize="@dimen/vac_info_head" />

            <TextView
                android:id="@+id/responsibilities_title"
                style="@style/vac_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_def_16"
                android:fontFamily="@font/ys_display_medium"
                android:text="@string/responsibilities"
                android:textSize="@dimen/vac_info_text" />

            <TextView
                android:id="@+id/responsibilities_info"
                style="@style/vac_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ys_display_regular"
                android:text="Список обязанностей. Точки разделения надо делать в коде."
                android:textSize="@dimen/vac_info_text" />

            <TextView
                android:id="@+id/requirements_title"
                style="@style/vac_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_def_16"
                android:fontFamily="@font/ys_display_medium"
                android:text="@string/requirements"
                android:textSize="@dimen/vac_info_text" />

            <TextView
                android:id="@+id/requirements_info"
                style="@style/vac_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ys_display_regular"
                android:text="Список требований. Точки разделения надо делать в коде."
                android:textSize="@dimen/vac_info_text" />

            <TextView
                android:id="@+id/terms_title"
                style="@style/vac_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_def_16"
                android:fontFamily="@font/ys_display_medium"
                android:text="@string/Terms"
                android:textSize="@dimen/vac_info_text" />

            <TextView
                android:id="@+id/terms_info"
                style="@style/vac_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ys_display_regular"
                android:text="Список условий. Точки разделения надо делать в коде."
                android:textSize="@dimen/vac_info_text" />

            <TextView
                android:id="@+id/skills_title"
                style="@style/vac_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/ys_display_medium"
                android:text="@string/skills"
                android:textSize="@dimen/vac_info_head" />

            <TextView
                android:id="@+id/skills_info"
                style="@style/vac_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_def_16"
                android:fontFamily="@font/ys_display_regular"
                android:text="Список условий. Точки разделения надо делать в коде."
                android:textSize="@dimen/vac_info_text" />

            <TextView
                android:id="@+id/contacts_title"
                style="@style/vac_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/ys_display_medium"
                android:text="@string/contacts"
                android:textSize="@dimen/vac_info_head" />

            <TextView
                android:id="@+id/contacts_info"
                style="@style/vac_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_def_16"
                android:autoLink="email|phone"
                android:fontFamily="@font/ys_display_regular"
                android:linksClickable="true"
                android:text="Номер телефона и/или почта. Точки разделения надо делать в коде."
                android:textSize="@dimen/vac_info_text"
                android:scrollHorizontally="false"
                android:ellipsize="none"
                android:singleLine="false"
                android:inputType="textMultiLine"
                android:lineSpacingExtra="2dp"
                android:breakStrategy="simple"
                android:scrollbars="vertical"
                android:overScrollMode="always"
                android:gravity="start|top"/>

        </LinearLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="@dimen/prog_size"
        android:layout_height="@dimen/prog_size"
        android:layout_gravity="center"
        android:indeterminateTint="@color/yp_blue"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vac_header" />

    <LinearLayout
        android:id="@+id/vac_del_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vac_header">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/vac_deleted" />

        <TextView
            style="@style/error_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_def_16"
            android:gravity="center"
            android:text="@string/vac_deleted" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/server_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vac_header">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/server_error_vac" />

        <TextView
            style="@style/error_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_def_16"
            android:gravity="center_horizontal"
            android:text="@string/Server_error" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
