<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/team_header"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginStart="@dimen/margin_def_16"
            style="@style/HeaderStyle"
            android:text="@string/team"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <TextView
        android:id="@+id/team"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:fontFamily="@font/ys_display_bold"
        android:textSize="32sp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="@dimen/margin_def_16"
        android:layout_marginEnd="@dimen/margin_def_16"
        style="@style/team_style"
        android:text="Над приложением работали"
        app:layout_constraintTop_toBottomOf="@+id/team_header" />

    <TextView
        android:id="@+id/name1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:fontFamily="@font/ys_display_medium"
        android:textSize="16sp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="@dimen/margin_def_16"
        android:layout_marginEnd="@dimen/margin_def_16"
        style="@style/team_style"
        android:text="Андронов Максим"
        app:layout_constraintTop_toBottomOf="@+id/team" />

    <TextView
        android:id="@+id/name2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:fontFamily="@font/ys_display_medium"
        android:textSize="16sp"
        android:layout_marginTop="@dimen/margin_def_16"
        android:layout_marginStart="@dimen/margin_def_16"
        android:layout_marginEnd="@dimen/margin_def_16"
        style="@style/team_style"
        android:text="Багданова Рената"
        app:layout_constraintTop_toBottomOf="@+id/name1" />

    <TextView
        android:id="@+id/name3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:fontFamily="@font/ys_display_medium"
        android:textSize="16sp"
        android:layout_marginTop="@dimen/margin_def_16"
        android:layout_marginStart="@dimen/margin_def_16"
        android:layout_marginEnd="@dimen/margin_def_16"
        style="@style/team_style"
        android:text="Павлова Алёна"
        app:layout_constraintTop_toBottomOf="@+id/name2" />

    <TextView
        android:id="@+id/name4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:fontFamily="@font/ys_display_medium"
        android:textSize="16sp"
        android:layout_marginTop="@dimen/margin_def_16"
        android:layout_marginStart="@dimen/margin_def_16"
        android:layout_marginEnd="@dimen/margin_def_16"
        style="@style/team_style"
        android:text="Шустов Вадим"
        app:layout_constraintTop_toBottomOf="@+id/name3" />

</androidx.constraintlayout.widget.ConstraintLayout>
