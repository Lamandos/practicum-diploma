<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vacancyTVForRV"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginBottom="@dimen/margin_9"
    android:layout_marginStart="@dimen/margin_def_16"
    android:layout_marginEnd="@dimen/margin_def_16"
     android:layout_marginTop="@dimen/margin_9">
    <ImageView
        android:id="@+id/vacancyPlaceholder"
        android:layout_width="@dimen/size_48dp"
        android:layout_height="@dimen/size_48dp"
        android:src="@drawable/placeholder"
        android:background="@drawable/vac_icon_border"
        android:padding="1dp"
        android:scaleType="centerInside"
        android:clipToOutline="true"/>

    <LinearLayout

        android:layout_marginStart="@dimen/pad_12"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView

            android:id="@+id/vacancyNameCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ys_display_medium"
            android:textSize="@dimen/size_22sp"
            android:textFontWeight="400"
            android:ellipsize="none"
            android:scrollHorizontally="false"
            android:singleLine="false"
            android:inputType="textMultiLine"
            android:breakStrategy="simple"
            style="@style/VacancyRVText"
            tools:text="Андроид - разработчик junior, \nМосква" />

        <TextView
            android:id="@+id/vacancyWP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ys_display_regular"
            android:textSize="@dimen/size_16sp"
            android:textFontWeight="400"
            style="@style/VacancyRVText"
            tools:text="Маркет" />

        <TextView
            android:id="@+id/vacancySalary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ys_display_regular"
            android:textSize="@dimen/size_16sp"
            android:textFontWeight="400"
            style="@style/VacancyRVText"
            tools:text="От 1000$" />

    </LinearLayout>


</LinearLayout>
