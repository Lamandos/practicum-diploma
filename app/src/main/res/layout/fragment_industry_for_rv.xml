<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/industryForRV"
    android:layout_width="match_parent"
    android:layout_height="@dimen/container_60"
    android:orientation="horizontal"
    android:clickable="true"
    android:focusable="true"
    android:paddingStart="@dimen/margin_def_16">

    <TextView
        android:id="@+id/industry_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_weight="1"
        style="@style/industry_rv"
        android:text="Тест индустрия"
        android:layout_gravity="center_vertical" />


    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/check_industry"
        android:layout_width="@dimen/size_48dp"
        android:layout_height="@dimen/size_48dp"
        android:layout_gravity="center"
        android:button="@drawable/checkbox_circle"
        android:buttonTint="@color/yp_blue"
        android:layout_marginEnd="@dimen/pad_4" />

</LinearLayout>
